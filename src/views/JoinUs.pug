extends Layout/main.pug

block styles 
    link(rel='stylesheet' href='/styles/form.css')
    link(rel='stylesheet' href='/styles/main.css')
    link(rel='stylesheet' href='/styles/animation.css')

block body
    section.w-full.h-full.flex.items-center.justify-center(class='smallScreen__margin')
        form.w-full.max-w-lg.py-24
            .flex.flex-wrap.-mx-3.mb-6
                .w-full.px-3.mb-6(class='md:w-1/2 md:mb-0')
                    label.block.uppercase.tracking-wide.text-gray-700.text-xs.font-bold.mb-2(for='grid-first-name')
                        | First Name
                    input#grid-first-name.appearance-none.block.w-full.bg-gray-200.text-gray-700.border.rounded.py-3.px-4.mb-3.leading-tight(class='focus:outline-none focus:bg-white' type='text' placeholder='Jane')
                .w-full.px-3(class='md:w-1/2')
                    label.block.uppercase.tracking-wide.text-gray-700.text-xs.font-bold.mb-2(for='grid-last-name')
                        | Last Name
                    input#grid-last-name.appearance-none.block.w-full.bg-gray-200.text-gray-700.border.border-gray-200.rounded.py-3.px-4.leading-tight(class='focus:outline-none focus:bg-white focus:border-gray-500' type='text' placeholder='Doe')
            .flex.flex-wrap.-mx-3.mb-6
                .w-full.px-3
                    label.block.uppercase.tracking-wide.text-gray-700.text-xs.font-bold.mb-2(for='grid-Number')
                        | Phone Number
                    input#grid-Number.appearance-none.block.w-full.bg-gray-200.text-gray-700.border.border-gray-200.rounded.py-3.px-4.mb-3.leading-tight(class='focus:outline-none focus:bg-white focus:border-gray-500' type='password' placeholder='9876543210')
            .flex.flex-wrap.-mx-3.mb-6
                .w-full.px-3
                    label.block.uppercase.tracking-wide.text-gray-700.text-xs.font-bold.mb-2(for='grid-email')
                        | Email
                    input#grid-email.appearance-none.block.w-full.bg-gray-200.text-gray-700.border.border-gray-200.rounded.py-3.px-4.mb-3.leading-tight(class='focus:outline-none focus:bg-white focus:border-gray-500' type='password' placeholder='email@gmail.com')
            .flex.flex-wrap.-mx-3.mb-2
                .w-full.px-3.mb-6(class='md:w-1/3 md:mb-0')
                    label.block.uppercase.tracking-wide.text-gray-700.text-xs.font-bold.mb-2(for='grid-city')
                        | City
                    input#grid-city.appearance-none.block.w-full.bg-gray-200.text-gray-700.border.border-gray-200.rounded.py-3.px-4.leading-tight(class='focus:outline-none focus:bg-white focus:border-gray-500' type='text' placeholder='Albuquerque')
                .w-full.px-3.mb-6(class='md:w-1/3 md:mb-0')
                    label.block.uppercase.tracking-wide.text-gray-700.text-xs.font-bold.mb-2(for='grid-state')
                        | State
                    input#grid-state.appearance-none.block.w-full.bg-gray-200.text-gray-700.border.border-gray-200.rounded.py-3.px-4.leading-tight(class='focus:outline-none focus:bg-white focus:border-gray-500' type='text' placeholder='Albuquerque')
                .w-full.px-3.mb-6(class='md:w-1/3 md:mb-0')
                    label.block.uppercase.tracking-wide.text-gray-700.text-xs.font-bold.mb-2(for='grid-zip')
                        | Zip
                    input#grid-zip.appearance-none.block.w-full.bg-gray-200.text-gray-700.border.border-gray-200.rounded.py-3.px-4.leading-tight(class='focus:outline-none focus:bg-white focus:border-gray-500' type='text' placeholder='90210')

