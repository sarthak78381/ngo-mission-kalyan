doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=], initial-scale=1.0')
  link(rel='icon' href='/img/logo.jpeg' type='image/icon type')
  link(href='https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css' rel='stylesheet')
  link(href='https://fonts.googleapis.com/css?family=Roboto@100;700&display=swap' rel='stylesheet')
  script(src='https://kit.fontawesome.com/a81368914c.js')
  title Mission Kalyan Foundation
.w-full.h-screen.flex.items-center.justify-center
  form.w-full.bg-white.rounded-lg(class='md:w-1/3' action="/admin/Change-Password" method='POST')
    .flex.font-bold.justify-center.mt-6
      img.h-20.w-20(src='https://raw.githubusercontent.com/sefyudem/Responsive-Login-Form/master/img/avatar.svg')
    h2.text-3xl.text-center.text-gray-700.mb-4 #{name}
    .px-12.pb-10
      .w-full.mb-2
        .flex.items-center
          i.ml-3.fill-current.text-gray-400.text-xs.z-10.fas.fa-lock
          input.-mx-6.px-8.w-full.border.rounded.px-3.py-2.text-gray-700(type='password' placeholder='Old Password' name='oldPassword' class='focus:outline-none' required)
      .w-full.mb-2
        .flex.items-center
          i.ml-3.fill-current.text-gray-400.text-xs.z-10.fas.fa-lock
          input.-mx-6.px-8.w-full.border.rounded.px-3.py-2.text-gray-700(type='password' placeholder='New Password' name='newPassword' class='focus:outline-none' required)
      button.w-full.py-2.rounded-full.bg-green-600.text-gray-100(type='submit' class='focus:outline-none') Change Password